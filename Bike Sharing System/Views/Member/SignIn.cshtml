@{
    ViewData["Title"] = "Sign In";
}

<h2 class="text-center my-4">Sign In</h2>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Welcome Back</h5>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form method="post" action="@Url.Action("SignIn", "Member")" novalidate>
                <div class="mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Enter Email" aria-label="Email" required />
                </div>
                <div class="mb-3">
                    <input type="password" name="password" class="form-control" placeholder="Enter Password" aria-label="Password" required />
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
            </form>

            <div class="text-center">
                <p>Don't have an account? <a href="@Url.Action("Register", "Member")" class="text-primary">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
