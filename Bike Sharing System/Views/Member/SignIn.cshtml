@{
    ViewData["Title"] = "Sign In";
}

<h2 class="text-center my-4">Sign In</h2>

<!-- Sign-In Form Section -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Welcome Back</h5>

            <form method="post" action="/Member/Login">
                <div class="mb-3">
                    <input type="text" name="Username" placeholder="Enter Username" class="form-control" required />
                </div>
                <div class="mb-3">
                    <input type="password" name="Password" placeholder="Enter Password" class="form-control" required />
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
            </form>
            <div class="text-center">
                <p>Don't have an account? <a href="/Member/Register" class="text-primary">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
