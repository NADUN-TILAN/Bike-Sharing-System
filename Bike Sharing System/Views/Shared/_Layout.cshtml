<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Bike Sharing System</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        /* Custom Navbar */
        .navbar {
            background: linear-gradient(135deg, #007bff, #0056b3);
            padding: 15px 0;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.8rem;
            color: #fff !important;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #fff !important;
                text-decoration: underline;
            }

        .btn-signin {
            background-color: transparent;
            color: white;
            font-weight: bold;
            border: 2px solid white;
            border-radius: 50px;
            padding: 8px 20px;
            transition: 0.3s ease-in-out;
            display: flex;
            align-items: center;
            font-size: 1rem;
        }

            .btn-signin i {
                font-size: 1.2rem;
            }

            .btn-signin:hover {
                background-color: white;
                color: #007bff;
                border-color: white;
            }

        /* Footer Styling */
        .footer {
            background: #222;
            color: #bbb;
            padding: 30px 0;
            margin-top: 50px;
            text-align: center;
        }

            .footer .social-icons a {
                color: #bbb;
                font-size: 1.5rem;
                margin: 0 10px;
                transition: 0.3s;
            }

                .footer .social-icons a:hover {
                    color: #007bff;
                }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🚲 BikeShare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">
                        <a href="@Url.Action("SignIn", "Member")" class="btn btn-signin">
                            <i class="bi bi-person-circle text-white"></i> <!-- White User Icon -->
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Bike Sharing System</p>
            <div class="social-icons">
                <a href="https://twitter.com" target="_blank"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com" target="_blank"><i class="bi bi-facebook"></i></a>
                <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
                <a href="https://linkedin.com" target="_blank"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
