@{
    ViewData["Title"] = "Bike Search";
}

<h2 class="text-center my-4">Search for a Bike</h2>

<!-- Search Form Section -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">Find Your Perfect Ride</h5>

            <form method="post">
                <!-- Location Input -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="location" id="location" placeholder="Enter location" class="form-control" required />
                </div>

                <!-- Bike Type Input -->
                <div class="mb-3">
                    <label for="bikeType" class="form-label">Bike Type:</label>
                    <input type="text" name="bikeType" id="bikeType" placeholder="Enter bike type (e.g., mountain, road)" class="form-control" required />
                </div>

                <!-- Submit Button -->
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
