@{
    ViewBag.Title = "Contact Us";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">📞 Contact Us</h2>

    <div class="row">
        <!-- Contact Info Section -->
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="fw-bold">Get in Touch</h4>
                <p>We're here to help! Reach out to us via phone, email, or visit our location.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-geo-alt-fill text-primary"></i> 123 Main Street, City, Country</li>
                    <li><i class="bi bi-telephone-fill text-primary"></i> +1 234 567 890</li>
                    <li><i class="bi bi-envelope-fill text-primary"></i> contact@bikesharing.com</li>
                    <li><i class="bi bi-clock text-primary"></i> Mon - Fri: 9:00 AM - 6:00 PM</li>
                </ul>
                <div class="mt-3">
                    <a href="https://facebook.com" class="btn btn-outline-primary me-2"><i class="bi bi-facebook"></i> Facebook</a>
                    <a href="https://twitter.com" class="btn btn-outline-info me-2"><i class="bi bi-twitter"></i> Twitter</a>
                    <a href="https://instagram.com" class="btn btn-outline-danger"><i class="bi bi-instagram"></i> Instagram</a>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="fw-bold">Send Us a Message</h4>
                <form action="/Contact/SendMessage" method="post">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" name="name" required placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="4" name="message" required placeholder="Write your message here..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Google Maps Embed -->
    <div class="mt-5">
        <h4 class="text-center fw-bold mb-3">📍 Our Location</h4>
        <div class="card shadow">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345093704!2d144.9537353153169!3d-37.816279742021824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d5df0c98f1b%3A0x6b64b2c1b3e50a0!2sMelbourne%20City%20Centre%2C%20Victoria%2C%20Australia!5e0!3m2!1sen!2sus!4v1625725063490!5m2!1sen!2sus"
                    width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
</div>
