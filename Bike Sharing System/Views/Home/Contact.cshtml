@{
    ViewBag.Title = "Contact Us";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<style>
    /* Page Background */
    body {
        background: linear-gradient(to right, #ece9e6, #ffffff);
    }

    /* Contact Section */
    .contact-section {
        padding: 50px 0;
    }

    /* Card Styling */
    .contact-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background: white;
        padding: 25px;
    }

    /* Form Styling */
    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.2);
        }

    /* Buttons */
    .btn-custom {
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-custom:hover {
            transform: scale(1.05);
        }

    /* Social Icons */
    .social-icons a {
        font-size: 20px;
        transition: 0.3s;
        margin: 5px;
    }

        .social-icons a:hover {
            transform: scale(1.2);
        }

    /* Map Styling */
    .map-container iframe {
        border-radius: 10px;
    }
</style>

<!-- Contact Us Section -->
<div class="container contact-section">
    <h2 class="text-center fw-bold mb-4">📞 Contact Us</h2>

    <div class="row g-4">
        <!-- Contact Info Section -->
        <div class="col-lg-5">
            <div class="contact-card">
                <h4 class="fw-bold">Get in Touch</h4>
                <p>We’re here to assist you. Feel free to reach out via any of the following:</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-geo-alt-fill text-primary"></i> 123 Main Street, City, Country</li>
                    <li><i class="bi bi-telephone-fill text-primary"></i> +1 234 567 890</li>
                    <li><i class="bi bi-envelope-fill text-primary"></i> contact@bikesharing.com</li>
                    <li><i class="bi bi-clock text-primary"></i> Mon - Fri: 9:00 AM - 6:00 PM</li>
                </ul>
                <div class="social-icons mt-3">
                    <a href="https://facebook.com" class="text-primary"><i class="bi bi-facebook"></i></a>
                    <a href="https://twitter.com" class="text-info"><i class="bi bi-twitter"></i></a>
                    <a href="https://instagram.com" class="text-danger"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="col-lg-7">
            <div class="contact-card">
                <h4 class="fw-bold">Send Us a Message</h4>
                <form action="/Contact/SendMessage" method="post">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" name="name" required placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" rows="4" name="message" required placeholder="Write your message here..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-custom w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Google Maps Embed -->
    <div class="mt-5 map-container">
        <h4 class="text-center fw-bold mb-3">📍 Our Location</h4>
        <div class="contact-card p-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345093704!2d144.9537353153169!3d-37.816279742021824!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d5df0c98f1b%3A0x6b64b2c1b3e50a0!2sMelbourne%20City%20Centre%2C%20Victoria%2C%20Australia!5e0!3m2!1sen!2sus!4v1625725063490!5m2!1sen!2sus"
                    width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </div>
</div>
