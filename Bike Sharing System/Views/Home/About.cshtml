@{
    ViewBag.Title = "About Us | Bike Sharing System";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    /* Custom Styles */
    .hero {
        background: url('/images/img-2.png') center/cover no-repeat;
        color: white;
        padding: 80px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

    .section-title {
        font-weight: bold;
        color: #007bff;
    }

    .icon {
        font-size: 2.5rem;
        color: #007bff;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>About Us</h1>
        <p class="lead">Connecting communities, one ride at a time. 🚲</p>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="container my-5 text-center">
    <h2 class="section-title">🌍 Our Mission & Vision</h2>
    <p class="lead">We aim to revolutionize urban mobility by providing an eco-friendly, convenient, and affordable bike-sharing system.</p>
</section>

<!-- Why Choose Us Section -->
<section class="container my-5">
    <h2 class="text-center section-title">💡 Why Choose Us?</h2>
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <i class="icon bi bi-bicycle"></i>
            <h4>Easy & Affordable</h4>
            <p>Rent a bike anytime, anywhere at a low cost.</p>
        </div>
        <div class="col-md-4">
            <i class="icon bi bi-globe"></i>
            <h4>Eco-Friendly</h4>
            <p>Reduce carbon footprint and promote a greener environment.</p>
        </div>
        <div class="col-md-4">
            <i class="icon bi bi-people"></i>
            <h4>Community Driven</h4>
            <p>Join a growing community of bike enthusiasts.</p>
        </div>
    </div>
</section>

<!-- Contact & Support -->
<section class="container cta my-5 text-center p-4 bg-light">
    <h2>📞 Contact & Support</h2>
    <p>Have questions? Reach out to us anytime!</p>
    <a href="/Home/Contact" class="btn btn-primary btn-lg">Get in Touch</a>
</section>

