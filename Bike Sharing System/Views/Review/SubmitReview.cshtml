@{
    ViewData["Title"] = "Submit Review";
}

<h2 class="text-center my-4">Submit Your Review</h2>

<!-- Review Form Section -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">We Value Your Feedback</h5>

            <!-- Review Form -->
            <form method="post" action="/Review/SubmitReview">
                <input type="hidden" name="bikeId" value="@ViewBag.BikeId" />

                <!-- Comment Textarea -->
                <div class="mb-3">
                    <textarea name="comment" class="form-control" placeholder="Write your review here..." rows="4" required></textarea>
                </div>

                <!-- Rating Input -->
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating (1-5):</label>
                    <input type="number" name="rating" id="rating" min="1" max="5" class="form-control" required />
                </div>

                <!-- Submit Button -->
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-success w-100">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
