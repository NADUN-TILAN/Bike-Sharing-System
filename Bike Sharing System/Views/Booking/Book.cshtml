@model dynamic

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Book Your Bike</h2>

            <form method="post" action="/Booking/ConfirmBooking">
                <input type="hidden" name="bikeId" value="@Model.BikeId" />

                <div class="mb-3">
                    <label for="returnDate" class="form-label">Return Date:</label>
                    <input type="date" id="returnDate" name="returnDate" class="form-control" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Book Bike</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
