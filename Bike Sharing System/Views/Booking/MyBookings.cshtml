@model List<Booking>

<!-- Table Container -->
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h4>Booking List</h4>
        </div>
        <div class="card-body">
            <!-- Booking Table -->
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Bike ID</th>
                        <th scope="col">Booking Date</th>
                        <th scope="col">Return Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BikeId</td>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.ReturnDate.ToShortDateString()</td>
                            <td>
                                <!-- Action Buttons (e.g., Edit, Delete) -->
                                <a href="/Booking/Edit/@booking.BikeId" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/Booking/Cancel/@booking.BikeId" class="btn btn-danger btn-sm">Cancel</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
